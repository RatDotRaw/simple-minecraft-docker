#####
# alpine edition
#####
FROM eclipse-temurin:17-jre-alpine
EXPOSE 25565

ADD ./data /app/data

RUN apk add --update bash nodejs npm wget unzip 

# install rcon 
ADD ./rcon /app/rcon
WORKDIR /app/rcon
RUN npm install
RUN ln -s /app/rcon/rcon.js /usr/bin/rcon
RUN chmod u+x /app/rcon/rcon.js

WORKDIR /app/container

CMD ["bash", "/app/data/startup.sh"]
